@section Styles {
    <style>
	    .pet-description {
		    position: relative;
            margin: 1em 0;
            padding: .3em;
            background-color: #ff6a00;
	    }

        .pet-description::after {
            content: "";           
            clear: both;
            width: 100%;
            display: block;
        }
	
	    .pet-picture {
		    width: 35%;
		    float: left;
            min-width: 8em;
	    }
	
	    .pet-picture img {
		    width: 100%;
		    height: 100%;
		    margin: 0 auto;
	    }

        .pet-info {
            width: 64%;
            float: left;
            padding-left: 2em;
	    }

        .pet-info ul {
            list-style: none;
            padding-left: 0;
        }

	    .pet-info li {
            width: 50%;
            float: left;	                
            min-width: 10em;
            padding-right: 1em;
	    }        	
	
	    .pet-notes {
		    position: absolute;
		    top: 105%;
            display: none;
	    }
	
	    .pet-description, .pet-description * {
		    box-sizing: border-box;
	    }
    </style>
}
