<script id="pet-edit-view" type="text/x-handlebars-template">​

    <form action="/Members/PictureUploadAjaxHandler" enctype="multipart/form-data" id="UploadForm" method="post">
	    <div class="editor-field">
            <input accept=".jpg" id="PictureFile" name="PictureFile" style="display: none" type="file" value="" />
        </div>
	    <div class="editor-field">
		    <input data-val="true" data-val-number="The field Pet ID Number: must be a number." data-val-required="The Pet ID Number: field is required." id="PetID" name="PetID" type="hidden" value="{{PetID}}" />
		    <span class="field-validation-valid" data-valmsg-for="PetID" data-valmsg-replace="true"></span>
	    </div>
	    <div class="editor-field">
		    <input data-val="true" data-val-length="You can only add up to 100 characters" data-val-length-max="100" data-val-required="Please type your pet name" id="PetName" name="PetName" type="hidden" value="{{PetName}}" />
		    <span class="field-validation-valid" data-valmsg-for="PetName" data-valmsg-replace="true"></span>
	    </div>
    </form>

    <form action="/Members/Edit/5" method="post">    
	    <fieldset>
		    <legend>PetModel</legend>
		
		    <div class="display-field">
			    <img src="/Content/Uploads/{{PetName}}.jpg" id="PetImage" style="width:150px;height:120px" />
		    </div>

		    <div class="editor-label">
			    <label for="PetAgeYears">Years:</label>
		    </div>
		    <div class="editor-field">
			    <input class="text-box single-line" data-val="true" data-val-number="The field Years: must be a number." data-val-range="The value must be 0 or greater than 0" data-val-range-max="2147483647" data-val-range-min="0" data-val="true" data-val-number="The field Months: must be a number." data-val-range="The value must be 0 or greater than 0" data-val-range-max="2147483647" data-val-range-min="0" id="PetAgeYears" name="PetAgeYears" type="number" value="{{PetAgeYears}}" />
			    <span class="field-validation-valid" data-valmsg-for="PetAgeYears" data-valmsg-replace="true"></span>
		    </div>
		
		    <div class="editor-label">
			    <label for="PetAgeMonths">Months:</label>
		    </div>
		    <div class="editor-field">
                <input class="text-box single-line" data-val="true" data-val-number="The field Months: must be a number." data-val-range="The value must be 0 or greater than 0" data-val-range-max="2147483647" data-val-range-min="0" id="PetAgeMonths" name="PetAgeMonths" type="number" value="{{PetAgeMonths}}" />
			    <span class="field-validation-valid" data-valmsg-for="PetAgeMonths" data-valmsg-replace="true"></span>
		    </div>	
		
            <div class="editor-label">
                <label for="StatusID">Status:</label>
            </div>
            <div class="editor-field">
                <select id="StatusID" name="StatusID">
				    <option {{#ifCond StatusID '==' 1}} selected="selected" {{/ifCond}} value="1">lost</option>
				    <option {{#ifCond StatusID '==' 2}} selected="selected" {{/ifCond}} value="2">found</option>
				    <option {{#ifCond StatusID '==' 3}} selected="selected" {{/ifCond}} value="3">disclaim</option>
			    </select>
                <span class="field-validation-valid" data-valmsg-for="StatusID" data-valmsg-replace="true"></span>
            </div>
		
            <div class="editor-label">
                <label for="LastSeenOn">Last Seen On:</label>
            </div>
            <div class="editor-field">
                <input id="LastSeenOn" name="LastSeenOn" Type="date" Value="{{LastSeenOnFormated}}" />
                <span class="field-validation-valid" data-valmsg-for="LastSeenOn" data-valmsg-replace="true"></span>
            </div>
		
            <div class="editor-label">
                <label for="LastSeenWhere">Last Seen At:</label>
            </div>
            <div class="editor-field">
                <input class="text-box single-line" id="LastSeenWhere" name="LastSeenWhere" type="text" value="{{LastSeenWhere}}" />
                <span class="field-validation-valid" data-valmsg-for="LastSeenWhere" data-valmsg-replace="true"></span>
            </div>
		
            <div class="editor-label">
                <label for="Notes">Notes:</label>
            </div>
            <div class="editor-field">
                <textarea class="text-box multi-line" data-val="true" data-val-length="You can only add up to 400 characters" data-val-length-max="400" id="Notes" name="Notes">{{Notes}}</textarea>
                <span class="field-validation-valid" data-valmsg-for="Notes" data-valmsg-replace="true"></span>
            </div>
		
            <p>
                <input type="submit" value="Save" id="btn-save" />
            </p>		
	    </fieldset>
    </form>
    <div>        
        <a id="back-to-list" href="#">Back to Pets List</a>
    </div>
</script>

